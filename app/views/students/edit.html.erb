<div id="content-header">
   <img src="student_details/student_details_logo.jpg" />
  <h1>Edit details</h1>
  <h3>Student details</h3>
  <div id="app-back-button">
      <%= link_to_function image_tag("buttons/back.png",:border => 0), "history.back()" %>
  </div>
</div>

<div id="page-yield">

  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>

  <%= form_for :students, :url => {:action => 'update', :id => @student.id}, :html => {:multipart => true} do |s| %>

    <div id="admission1-form">
      <div id="necessary-field-notification"> Fields marked with <span class="necessary-field">*</span> must be filled.</div>

      <div id="autofill_area">

        <div class="label-field-pair-edit">
          <%= s.label :admission_no %><span class="necessary-field">*</span>
          <%= s.text_field :admission_no %>
        </div>

        <div class="label-field-pair-edit">
    	<%= s.label :admission_date %><span class="necessary-field">*</span> 
    	<%= s.text_field :admission_date, :id => "datepicker",:value => @student.admission_date %>
        </div>

        <div class="extender"></div>

      </div>

      <span class="span-sub-heading">Personal Details</span>

      <hr class="sub-heading"></hr>

      <div class="label-field-pair">
    	<%= s.label :first_name %><span class="necessary-field">*</span>
    	<%= s.text_field :first_name %>
      </div>

      <hr class="label-underline"></hr>

      <div class="label-field-pair">
        <%= s.label :middle_name %>
        <%= s.text_field :middle_name %>
      </div>

      <hr class="label-underline"></hr>

      <div class="label-field-pair">
    	<%= s.label :last_name %><span class="necessary-field">*</span>
    	<%= s.text_field :last_name %>
      </div>
      <hr class="label-underline"></hr>


      <div id="admission1_form_vertical_block_left">

        <div class="label-field-pair">
      		<%= s.label :course_and_batch %>
      		<div class="text-input-bg"><%= select :student, :batch_id, Batch.all.map {|b| [b.full_name, b.id]} %></div>
        </div>

        <hr class="label-underline"></hr>

        <div class="label-field-pair">
    		<%= s.label :date_of_birth %><span class="necessary-field">*</span>
    		<%= s.text_field :date_of_birth, :id => "datepicker1" %>
        </div>

        <hr class="label-underline"></hr>

        <div class="label-field-pair">
    		<%= s.label :gender %>
    		<%= s.radio_button :gender, "m", :checked => "checked" %>Male<%= s.radio_button :gender, "f" %>Female
          </div>

          <div class="extender"></div>

        </div>

        <hr class="label-underline"></hr>

        <div class="label-field-pair">
          <%= s.label :blood_group %>
          <div class="text-input-bg"><%= select :student, :blood_group, ["Unknown","A+", "A-", "B+", "B-", "O+", "O-", "AB+", "AB-"],{ :prompt => 'Select Blood Group' },
              :selected => @student.blood_group %></div>
        </div>

        <hr class="label-underline"></hr>

        <div class="label-field-pair">
          <%= s.label :birth_place %>
          <%= s.text_field :birth_place, :value =>@student.birth_place %>
        </div>

        <hr class="label-underline"></hr>

        <div class="label-field-pair">
          <%= s.label :nationality %>
          <div class="text-input-bg"><%= select :student, :nationality_id, Country.all.map {|c| [c.name, c.id]}, :selected => @student.nationality.id %></div>
        </div>

        <hr class="label-underline"></hr>

        <div class="label-field-pair">
          <%= s.label :mother_tongue %>
          <%= s.text_field :language, :value => @student.language %>
        </div>

        <hr class="label-underline"></hr>

        <div class="label-field-pair">
          <%= s.label :religion %>
          <%= s.text_field :religion, :value =>@student.religion %>
        </div>

        <hr class="label-underline"></hr>

        <div class="label-field-pair">
 			<%= s.label :student_category_id %>
    		<%= s.select :student_category_id, StudentCategory.all.map {|c| [c.name, c.id]}, { :prompt => 'Select category' } %>
  
        </div>
      </div>
      <br/>

      <span class="span-sub-heading">Contact Details</span>
      <hr class="sub-heading"></hr>

      <div id="admission1_form_vertical_block_right">

        <div class="label-field-pair">
          <%= s.label :address_line1 %>
          <%= s.text_field :address_line1, :value => @student.address_line1 %>
        </div>

        <hr class="label-underline"></hr>

        <div class="label-field-pair">
          <%= s.label :address_line2 %>
          <%= s.text_field :address_line2, :value => @student.address_line2 %>
        </div>

        <hr class="label-underline"></hr>

        <div class="label-field-pair">
          <%= s.label :city %>
          <%= s.text_field :city, :value => @student.city %>
        </div>

        <hr class="label-underline"></hr>

        <div class="label-field-pair">
          <label for="master_student_state">State</label>
          <div class="text-input-bg"><%= s.text_field :state, :value =>@student.state_id %></div>
        </div>

        <hr class="label-underline"></hr>

        <div class="label-field-pair">
          <label for="master_student_pin_code">PIN code</label>
          <div class="text-input-bg"><%= s.text_field :pin_code, :value =>@student.pin_code %></div>
        </div>

        <hr class="label-underline"></hr>

        <div class="label-field-pair">
          <%= s.label :country %>
          <div class="text-input-bg"><%= select :student, :country_id, Country.all.map {|c| [c.name, c.id]}, :selected => @student.country.id %></div>
        </div>

        <hr class="label-underline"></hr>

        <div class="label-field-pair">
          <%= s.label :phone %>
          <%= s.text_field :phone1, :value =>@student.phone1 %>
        </div>

        <hr class="label-underline"></hr>

        <div class="label-field-pair">
          <%= s.label :mobile %>
          <%= s.text_field :phone2, :value =>@student.phone2 %>
        </div>

        <hr class="label-underline"></hr>

        <div class="label-field-pair">
          <label for="master_student_email">Email</label>
          <div class="text-input-bg"><%= s.text_field :email, :value => @student.email %></div>
        </div>
        <% if %>
        <hr class="label-underline"></hr>
        <div class="label-field-pair">
          <%= s.label :Enable_sms_Features %>
          <div class="text-input-bg"><%= s.check_box :is_sms_enabled %></div>
        </div>
        <% end %>
        <br/>

        <span class="span-sub-heading">Upload User photo</span>
        <hr class="sub-heading"></hr>

        <div class="label-field-pair">
          <%= s.label :upload_photo %>
          <%= s.file_field :image_file %>
        </div>
      </div>
    </div>

    <%= submit_tag "", :class => "submit_button", :value => 'â–º Update' %>
  <% end %>

</div>

