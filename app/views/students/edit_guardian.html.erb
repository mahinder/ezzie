<div id="content-header">
  <%= image_tag("admission/admission_page_logo.jpg") %>
  <h1>Parent Information</h1>
  <h3>Edit Parent/guardian details</h3>
  <div id="app-back-button">
    <%= link_to_function image_tag("buttons/back.png",:border => 0), "history.back()" %>
  </div>
</div>

<div id="page-yield">

  <% unless flash[:notice].nil? %> <p class="flash-msg"> <%= flash[:notice] %> </p> <% end %>

  <%= form_for :parent_detail , :url => {:action=> 'edit_guardian', :id =>@parent.id} do |f| %>

    <div id="admission1_form">



      <div class="label-field-pair">
        <label for="parent_detail_student_id">Student Admission no.</label>
        <div class="text_display"><%= @student.admission_no %></div>
        <%= f.hidden_field :ward_id, :value => @student.id %>
      </div>
      <br/>
      <span class="span-sub-heading">Parent - Personal Details</span>
      <hr class="sub-heading"></hr>

<div class="label-field-pair">
          <%= f.label :first_name %><span class="necessary-field">*</span>
          <%= f.text_field :first_name, :value => @parent.first_name  %>
        </div>
        <hr class="label-underline"></hr>
        <div class="label-field-pair">
          <%= f.label :last_name %>
          <%= f.text_field :last_name, :value => @parent.last_name %>
        </div>

        <hr class="label-underline"></hr>

        <div class="label-field-pair">
          <%= f.label :relation %><span class="necessary-field">*</span>
          <%= f.text_field :relation, :value => @parent.relation %>
        </div>

        <hr class="label-underline"></hr>

        <div class="label-field-pair">
          <%= f.label :dob %>
          <%= f.text_field :dob, :id => "datepicker" %>
        </div>

        <hr class="label-underline"></hr>

        <div class="label-field-pair">
          <%= f.label :education %>
          <%= f.text_field :education, :value => @parent.education %>
        </div>

        <hr class="label-underline"></hr>

        <div class="label-field-pair">
          <%= f.label :occupation %>
          <%= f.text_field :occupation, :value => @parent.occupation %>
        </div>

        <hr class="label-underline"></hr>

        <div class="label-field-pair">
          <%= f.label :income %>
          <%= f.text_field :income, :value => @parent.income %>
        </div>
        
		<div class="label-field-pair">
          <%= f.label :email %>
          <%= f.text_field :email, :value => @parent.email %>
        </div>
        
        <br/>

        <span class="span-sub-heading">Parent - Contact Details</span>

        <hr class="sub-heading"></hr>



      <div id="admission1_form_vertical_block_right">

        <div class="label-field-pair">
          <%= f.label :address_line_1 %>
          <% unless @student.address_line1.empty? %>
            <%= f.text_field :office_address_line1,:value=>@student.address_line1 %>
          <% else %>
            <%= f.text_field :office_address_line1 %>
          <% end %>
        </div>

        <hr class="label-underline"></hr>

        <div class="label-field-pair">
          <%= f.label :address_line_2 %>
          <% unless @student.address_line2.empty? %>
            <%= f.text_field :office_address_line2,:value=>@student.address_line2 %>
          <% else %>
            <%= f.text_field :office_address_line2 %>
          <% end %>
        </div>

        <hr class="label-underline"></hr>

        <div class="label-field-pair">
          <%= f.label :city %>
          <% unless @student.city.empty? %>
            <%= f.text_field :city,:value=>@student.city %></div>
          <% else %>
            <%= f.text_field :city %>
          <% end %>
        </div>

        <hr class="label-underline"></hr>

        <div class="label-field-pair">
          <%= f.label :state %>
          <% unless @student.state.empty? %>
            <div class="text-input-bg"><%= f.text_field :state,:value=>@student.state %></div>
          <% else %>
            <div class="text-input-bg"><%= f.text_field :state %></div>
          <% end %>
        </div>

        <hr class="label-underline"></hr>

        <div class="label-field-pair">
          <%= f.label :country %>
         <% unless @student.country_id.nil? %>
            <%= select :guardian, :country_id, Country.all.map {|c| [c.name, c.id]}, :selected => @student.country_id %>
         <% else %> 
            <%= select :guardian, :country_id, Country.all.map {|c| [c.name, c.id]}, :selected => 76 %>
          <% end %>  
        </div>

          <hr class="label-underline"></hr>

          <div class="label-field-pair">
            <%= f.label :office_phone1 %>
            <%= f.text_field :office_phone1, :value => @parent.office_phone1 %>
          </div>

          <hr class="label-underline"></hr>

          <div class="label-field-pair">
            <%= f.label :office_phone2 %>
            <%= f.text_field :office_phone2, :value => @parent.office_phone2 %>
          </div>

          <hr class="label-underline"></hr>

          <div class="label-field-pair">
            <%= f.label :mobile_phone %>
            <%= f.text_field :mobile_phone, :value => @parent.mobile_phone %>
          </div>



    </div>

    <div class="extender">
    </div>

    <%= submit_tag "",  :name => "commit", :class => "submit_button3", :value => "â–º Update" %>



  <% end %>
  </div>

</div>