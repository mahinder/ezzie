<label class="head_label">Edit Master Category for Fees<span></span></label>

<div id="grading-levels-form">

  <% form_remote_for @finance_fee_category,
    :url=>{:action=>'additional_fees_update',
    :id => @finance_fee_category.id} do |f| %>
    <div id="form-errors"></div>
    <div class="label-field-pair">
      <div class="label-container"><%= f.label :name %>  </div>
      <div class="input-container"> <%= f.text_field :name %> </div>
    </div>
    <div class="label-field-pair">
      <div class="label-container"><%= f.label :description %></div>
      <div class="input-container"><%= f.text_field :description %></div>
    </div>
    <div class="label-field-pair">
      <div class="label-container"><label>Start date :</label> </div>
      <div class="input-container"><%= calendar_date_select_tag 'additional_fees[start_date]', @collection_date.start_date %></div>
    </div>
    <div class="label-field-pair">
      <div class="label-container"><label>End date <span class="necessary-field">*</span>:</label> </div>
      <div class="input-container"><%= calendar_date_select_tag 'additional_fees[end_date]', @collection_date.end_date %></div>
    </div>
    <div class="label-field-pair">
      <div class="label-container"><label>Due date :</label> </div>
      <div class="input-container"><%= calendar_date_select_tag 'additional_fees[due_date]', @collection_date.due_date %></div>
    </div>
    <div class="label-field-pair">
      <div class="label-container"><label>Course :</label></div>
      <div class="input-container"> <% unless @finance_fee_category.batch_id.nil? %>
          <%= f.text_field :batch, :value => @finance_fee_category.batch.full_name, :disabled => true  %>
        <% else %>
          <label>ALL</label>
        <% end %>
      </div>
    </div>

    <%=  submit_tag "â–º Update",:class=>'submit_button' %>
  <% end %>
</div>