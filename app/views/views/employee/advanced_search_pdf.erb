<div id="page-yield">

  <div class="hor_line"></div>
  <h2>Employee Search Report</h2>
  <div class="hor_line"></div>


  <div class="extender"> </div>
  <div class="report">
    <div id ="main_info">
      <h4> <%= "Employee "+@searched_for.camelcase %></h4>
    </div>
    <div id="pdf-info">
      <table id="pdf-table" width="100%" cellspacing="0">
        <tr class="odd"><td class="col-pdf">Name</td><td class="col-pdf">Department</td><td class="col-pdf">Employee Number</td><td class="col-pdf">Date Of Joining</td></tr>
        <% i=0 %>
        <% @employees1.each do |employee1| %>
        <% c =cycle('even','odd ') %>
        <% i+= 1 %>
             <% if i==23 %>
              <% i= 0 %>
              <tr class="page-break"><td colspan="3"></td></tr>
              <% if c == 'even' %>
               <tr class="odd"><td class="col-pdf">Name</td><td class="col-pdf">Department</td><td class="col-pdf">Employee Number</td><td class="col-pdf">Date Of Joining</td></tr>
              <% else %>
               <tr class="even"><td class="col-pdf">Name</td><td class="col-pdf">Department</td><td class="col-pdf">Employee Number</td><td class="col-pdf">Date Of Joining</td></tr>
              <% end %>
              <% end %>
        <tr class="<%= "#{c}" %>">
              <td class="col-pdf"><%= employee1.first_name %></td>
              <td class="col-pdf"><%= employee1.employee_department.name %></td>
              <td class="col-pdf"><%= employee1.employee_number%></td>
              <td class="col-pdf"><%= employee1.joining_date.strftime("%d %b, %Y") %></td>
            </tr>
            <% end %>

            <% unless @employees2.nil? %>
              <% @employees2.each do |employee2| %>
            <% c =cycle('even','odd ') %>
            <% i+= 1 %>
              <% if i==23 %>
              <% i= 0 %>
              <tr class="page-break"><td colspan="3"></td></tr>
              <% if c == 'even' %>
               <tr class="odd"><td class="col-pdf">Name</td><td class="col-pdf">Department</td><td class="col-pdf">Employee Number</td><td class="col-pdf">Date Of Joining</td></tr>
              <% else %>
               <tr class="even"><td class="col-pdf">Name</td><td class="col-pdf">Department</td><td class="col-pdf">Employee Number</td><td class="col-pdf">Date Of Joining</td></tr>
              <% end %>
              <% end %>
            <tr class="<%= "#{c}" %>">
              <td class="col-pdf"><%= employee2.first_name %></td>
              <td class="col-pdf"><%= employee2.employee_department.name %></td>
              <td class="col-pdf"><%= employee2.employee_number%></td>
              <td class="col-pdf"><%= employee2.joining_date.strftime("%d %b, %Y") %></td>
            </tr>
            <% end %>
            <% end %>
      </table>

    </div>


  </div>

</div>