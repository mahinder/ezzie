<div id="content-header">
  <img src="/images/sms/sms_icon.png" alt="" />
  <h1>SMS</h1>
  <h3>Home</h3>
  <div id="app-back-button">
    <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
  </div>
</div>

<div id="page-yield">
  <div class="box">
     <div class="link-box">
      <div class="link-heading"><%= link_to 'SMS Settings',:action=>'settings' %></div>
      <div class="link-descr">SMS Settings page</div>
    </div>
<% if @sms_setting.application_sms_active %>
     <div class="link-box">
      <div class="link-heading"><%= link_to 'SMS to Students',:action=>'students'%></div>
      <div class="link-descr">Send SMS to Students</div>
    </div>
     <div class="link-box">
      <div class="link-heading"><%= link_to 'SMS to Batches',:action=>'batches'%></div>
      <div class="link-descr">Send Sms to Batches</div>
    </div>
     <div class="link-box">
      <div class="link-heading"><%= link_to 'SMS to Employees',:action=>'employees'%></div>
      <div class="link-descr">Send SMS to Employees</div>
    </div>
     <div class="link-box">
      <div class="link-heading"><%= link_to 'SMS to Employee Departments',:action=>'departments'%></div>
      <div class="link-descr">Send SMS to Employee Departments</div>
    </div>
     <div class="link-box">
      <div class="link-heading"><%= link_to_remote 'SMS to All',:url=>{:action=>'all'} %></div>
      <div class="link-descr">Send Sms to All</div>
    </div>

<% end %>
<div id="sms-box" >

</div>
    <%= image_tag("loader2.gif",
      :align => "absmiddle",
      :border => 0,
      :id => "loader",
      :style =>"display: none;" ) %>


</div>
</div>