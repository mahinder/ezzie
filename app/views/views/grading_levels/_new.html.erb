<div id="grading-levels-form">
  <h4><%= @batch.full_name unless @batch.nil? %></h4>

    <% form_remote_for @grading_level do |f| %>

      <div id="form-errors"></div>

    <% batch_id = (@batch.nil? ? nil : @batch.id) %>
    <%= f.hidden_field :batch_id, :value => batch_id %>

    <div class="label-field-pair">
      <%= f.label :name %>
      <div class="input-field"><%= f.text_field :name %></div>
    </div>

    <div class="label-field-pair">
      <%= f.label :min_score, 'Min score for this grade' %>
      <div class="input-field"><%= f.text_field :min_score %></div>
    </div>

  <%= f.submit 'â–º Save', :class => 'submit_button' %>
    



  <% end %>
</div>
