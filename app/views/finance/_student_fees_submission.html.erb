<div class="name">Fees Receipt Number</div><div class="val"><span>:</span>F<%= @financefee.id %></div>
<% unless @fee_category.nil? %>
  <div class="name">Fee Category Name</div><div class="val"><span>:</span><%= @fee_category.name %></div>
<% end %>
<% unless @student.student_category.nil? %>
  <div class="name">Student Category</div><div class="val"><span>:</span><%= @student.student_category.name %></div>
<% else %>
  <div class="name">Student Category</div><div class="val"><span>:</span>N.A</div>
<% end %>

<br />
<%= error_messages_for "financefee" ,:header_message => nil%>
<%if @financefee.transaction_id.nil?%>
  <%= render :partial => "fine_submission" %>
<% end %>
<div id="register">
  <div class="header">
    <div class="prev">
      <%= link_to_remote '◄',:url => {:action => 'load_fees_submission_batch', :batch_id => @batch.id, :student => @prev_student.id, :date=> @date.id }%>
    </div>
    <div class="month">
      <%= @student.full_name %>
    </div>
    <div class="next">
      <%= link_to_remote '►',:url => {:action => 'load_fees_submission_batch', :batch_id => @batch.id, :student => @next_student.id, :date=> @date.id }%>
    </div>
    <div class="extender"></div>
  </div>
</div>

<% total_fees =0 %>
<% form_remote_for :fees, :url => {:action => 'update_ajax',:student => @student.id,:batch_id => @batch.id,:date => @date.id, :fine=>@fine} do |form| %>
  <% unless @fee_particulars.nil? %>
    <table id="listing" align="center" width="100%" cellpadding="1" cellspacing="1">
      <tr class="tr-head">
        <td>Sl no.</td>
        <td>Particulars</td>
        <td>Amount (<%= currency %>  )</td>
      </tr>
      <tr class="tr-blank"></tr>
      <% i = 0 %>
      <% @fee_particulars.each do |fee| %>
        <tr class="tr-<%= cycle("odd","even") %>">
          <td class="col-1"><%= i+=1 %></td>
          <td class="col-2"><%= shorten_string(fee.name,20) %></td>
          <td class="col-6"><%= fee.amount%></td>
        </tr>
        <% total_fees += fee.amount %>
      <% end %>

      <% unless @total_discount == 0 %>
      <tr class="tr-blank"></tr>
      <tr class="tr-blank"></tr>
      <tr class="tr-<%= cycle("odd","even") %>" cellpadding="1" cellspacing="1">
        <td class="col-1" ></td>
        <td class="col-1" colspan="2"><span>Discount</span></td>
      </tr>
      <% @batch_discounts.each do |d| %>
        <tr class="tr-<%= cycle("odd","even") %>">
          <td class="col-1"><%= i+1 %></td>
          <td class="col-2"><%= shorten_string(d.name,20) %></td>
          <td class="col-6"><%= d.discount%> %</td>
        </tr>
        <% i += 1 %>
      <% end %>
      <% @student_discounts.each do |d| %>
        <tr class="tr-<%= cycle("odd","even") %>">
          <td class="col-1"><%= i+1 %></td>
          <td class="col-2"><%= shorten_string(d.name,20) %></td>
          <td class="col-6"><%= d.discount%> %</td>
        </tr>
        <% i += 1 %>
      <% end %>
      <% @category_discounts.each do |d| %>
        <tr class="tr-<%= cycle("odd","even") %>">
          <td class="col-1"><%= i+1 %></td>
          <td class="col-2"><%= shorten_string(d.name,20) %></td>
          <td class="col-6"><%= d.discount%> %</td>
        </tr>
        <% i += 1 %>
      <% end %>
      <tr class="tr-blank"></tr>
      <tr class="tr-blank"></tr>

      <tr class="tr-<%= cycle("odd","even") %>" cellpadding="1" cellspacing="1">
        <td class="col-8" colspan="2" >Total Discount</td>
        <td class="col-6" ><%= "#{@total_discount} %" %></td>
      </tr>

      <tr class="tr-blank"></tr>
      <tr class="tr-blank"></tr>
      <% total_fees = (total_fees - ((total_fees*@total_discount)/100)) %>
      <tr class="tr-<%= cycle("odd","even") %>" cellpadding="1" cellspacing="1">
        <td class="col-8" colspan="2" >Total Fee</td>
        <td class="col-6" ><%= total_fees %></td>
      </tr>

    <% end %>

      <tr class="tr-blank"></tr>
      <tr class="tr-blank"></tr>
      
      <% unless @fine.nil? %>
        <tr class="tr-<%= cycle("odd","even") %>">
          <td class="col-1"><%= i+=1 %></td>
          <td class="col-2"><span>Fine</span></td>
          <td class="col-6"><%= @fine.to_f %></td>
        </tr>
        <% total_fees += @fine.to_f %>
      <% end %>
      <% unless @paid_fees.nil? %>
        <tr class="tr-<%= cycle("odd","even") %>" cellpadding="1" cellspacing="1">
        <td class="col-1" ></td>
        <td class="col-1" colspan="2" ><span>Payment Done</span></td>
        
      </tr>
        <% paid = 0 %>
        <% @paid_fees.each do |p| %>
          <% paid += p.amount.to_f %>
          <tr class="tr-<%= cycle("odd","even") %>">
            <td class="col-1"><%= i+=1 %></td>
            <td class="col-2">Partial Payment on <%= p.transaction_date %></td>
            <td class="col-6">-<%= p.amount.to_f %></td>
          </tr>
        <% end %>
        <% total_fees -= paid %>
      <% end %>

      <% unless @financefee.transaction_id.nil? %>

        <% @trans = FinanceTransaction.find_by_id(@financefee.transaction_id) %>
        <% unless @trans.nil? %>
          <% if @trans.fine_included %>
            <tr class="tr-<%= cycle("odd","even") %>">
              <td class="col-1"><%= i+= 1 %></td>
              <td class="col-2"><span>Fine</span></td>
              <td class="col-6"><%= @trans.fine_amount %></td>
            </tr>
            <% total_fees += @trans.fine_amount.to_f %>
          <% end %>
        <% end %>
      <% end %>
      <tr class="tr-blank"></tr>
      <tr class="tr-blank"></tr>
      <tr class="tr-<%= cycle("odd","even") %>" cellpadding="1" cellspacing="1">
        <td class="col-8" colspan="2">Amount to pay:</td>
        <td class="col-6" ><%= total_fees%></td>
      </tr>

      <tr>
        <td colspan="3">
          <div class="pay_fees">
            <%unless total_fees.to_f ==0 %>
              <div class="label-field-pair2">
                <label>Amount :</label>
                <div class="text-input-bg2"><%= form.text_field :fees_paid, :value=>total_fees %>
                </div>
                <%= hidden_field_tag :total_fees, total_fees %>
              </div>
              <%= submit_tag "► Pay Fees",:class=>'submit_button' %>
            <% else %>
              <h4>Fees Paid</h4>
            <% end %>
          </div>
        </td>
      </tr>
      <tr>
        <td colspan="3">
          <% unless @paid_fees.nil? or not total_fees.to_f == 0 %>
            <%= link_to "► Print receipt",
              {:controller => "finance", :action => "student_fee_receipt_pdf", :id => @student.id, :id2=>@date.id},:target => '_blank', :class=> 'user_button' %>
          <% end %>
        </td>
      </tr>

    </table>
  <%end%>
<%end%>


