<div class="label-field-pair"><label> Select batch: </label></div>
<div class="fee_category_scroll">
  <div class="sel-list">
    Select: <%= link_to_function 'All', "$$('input.batches_box').each(function(checkbox) { checkbox.checked = true; });" %>,
    <%= link_to_function 'None', "$$('input.batches_box').each(function(checkbox) { checkbox.checked = false; });" %>
  </div>
  <% @fee_category.each do |f| %>
        <div class="each_batch">
          <%= check_box_tag "fee_collection[category_ids][]", f.id,true,:class=>'batches_box' %> <%= f.batch.full_name %>
        </div>
  <% end %>
</div>
